{
  "rules": {
    "quotes": [ 2, "single" ],
    "semi":   [ 2, "always" ],
    "no-unused-vars": [ "error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false } ]
  },
  "overrides": [
    {
      "files": [ "bin/*.js", "lib/*.js" ],
      "excludedFiles": "*.test.js",
      "rules": {
        "quotes": [ 2, "single" ]
      }
    }
  ]
}