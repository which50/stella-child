.attachment-vw_small_thumbnail {
	width: 85px !important;
}
.vw-post-box--medium .vw-post-box__thumbnail {
	height: 240px;
}
.widgetBorder {
	border: 3px solid #000;
	padding: 25px 25px 0;
}
.widgetBorder .widget-title {
	border-top: 0;
	padding-top: 0;

}
.vw-one-third .vw-widget-author-info {
	min-height: 775px;
	position: relative;
}
.vw-one-third .vw-widget-author-info .vw-author-socials {
	position: absolute;
	bottom: 20px;
	left: 0;
	width: 100%;
}
.breadcrumbs {
	border-bottom: 1px solid #eee;
	margin: -15px 0 25px;
	padding: 0 0 10px;
	font-size: 11px;
}
.breadcrumbs a {
	color: #666666;
}
.home .breadcrumbs,
.trail-browse {
	display: none !important;
}

@media (max-width: 992px) {
.vw-one-third .vw-widget-author-info {
	min-height: 0;
}
.vw-one-third .vw-widget-author-info .vw-author-socials {
	position: static;
}
}

